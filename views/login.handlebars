<div class="container-fluid mt-5 mb-5">
  <div class="row d-flex justify-content-center">
    <div class="col-7">
      {{>message}}
      <form action="/users/login" method="POST">
        <div class="mb-3 d-flex justify-content-center align-items-center">
          <h2>登入</h2>
        </div>
        <div class="mb-3 d-flex justify-content-center align-items-center">
          <label for="email" class="text-secondary">帳號：</label>
          <input type="email" name="email" id="email" placeholder="enter email" style="width: 200px; height: 35px" required>
        </div>
        <div class="mb-3 d-flex justify-content-center align-items-center">
          <label for="password" class="text-secondary">密碼：</label>
          <input type="password" name="password" id="password" placeholder="enter password" style="width: 200px; height: 35px" required>
        </div>
        
        <div class="mt-4 mb-5 d-flex justify-content-center">
          <button type="submit" class="btn btn-secondary mr-2" style="width: 200px; height: 35px">登入</button>
        </div>
      </form>
    </div>
  </div>
</div>

